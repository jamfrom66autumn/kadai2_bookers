<h1><b>Books</b></h1>

<table>
  <thead>
    <th><b>Title</b></th>
    <th><b>Body</b></th>
    <th colspan="3"></th>
  </thead>

  <tbody>
    <%  @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" =>"Are you sure?" %></td>
   </tr>
   <% end %>
  </tbody>
</table>


<h2><b>New book</b></h2>

    <% if @book && @book.errors.any? %>
      <div class = "error_message">
        <ul>
          <%= @book.errors.count %>error(s) occoured.
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

<%= form_with model: Book.new, url:'/books', local:true do |f| %>

  <h4>Title</h4>
  <span><%= f.text_field :title %></span>

  <h4>Body</h4>
  <span><%= f.text_area :body %></span>

  <%= f.submit 'Create Book' %>
<% end %>
